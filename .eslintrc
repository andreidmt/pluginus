{
  "parser": "babel-eslint",
  "root": true,
  "extends": [
    "@asd14/eslint-config/targets/node"
  ],

  "rules": {
    // disable until upstream issues fixed
    "jsdoc/check-line-alignment": "off",

    "jsdoc/check-tag-names": ["warn", {
      "definedTags": ["tag", "signature"]
    }],
  },

  "settings": {
    // Recommended if you use eslint_d
    "import/cache": {
      "lifetime": 5
    }
  }
}
