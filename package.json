{
  "name": "@mutantlove/pluginus",
  "version": "0.7.0",
  "description": "Dependency injection with promise support. Things that get ran after other things.",
  "homepage": "https://github.com/mutantlove/pluginus",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mutantlove/pluginus.git"
  },
  "bugs": {
    "url": "https://github.com/mutantlove/pluginus/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidcm"
  },
  "main": "dist/pluginus.js",
  "license": "BSD-3-Clause",
  "scripts": {
    "----UTIL": "",
    "setup": "rm -rf ./node_modules && npm i && npm audit fix",
    "setup:ci": "npm ci && npm audit fix",
    "update": "npm-check --update --save-exact",
    "----BUNDLE": "",
    "build": "rm -rf ./dist && babel src --out-dir dist",
    "build:ci": "babel src --out-dir dist",
    "----LINT": "",
    "lint:js": "eslint --ext .js src/",
    "lint:md": "markdownlint *.md",
    "lint": "npm run lint:md && npm run lint:js",
    "----TEST": "",
    "tdd": "nodemon --watch src --exec \"npm test\"",
    "test": "tape -r @babel/register src/*.test.js | tap-nirvana",
    "test:ci": "tape dist/*.test.js | tap-min",
    "coverage:report": "nyc npm test && nyc report --reporter=html",
    "coverage:ci": "nyc npm run test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "dependency-injection",
    "plugin-manager",
    "node"
  ],
  "dependencies": {
    "@babel/runtime": "7.6.2",
    "@mutantlove/m": "1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/register": "7.6.2",
    "@mutantlove/eslint-config": "5.3.0",
    "babel-eslint": "10.0.3",
    "coveralls": "3.0.6",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-json": "1.4.0",
    "eslint-plugin-no-inferred-method-name": "1.0.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-unicorn": "12.0.2",
    "glob": "7.1.4",
    "markdownlint-cli": "0.18.0",
    "nodemon": "1.19.3",
    "npm-check": "5.9.0",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "semantic-release": "15.13.24",
    "tap-nirvana": "1.1.0",
    "tape": "4.11.0"
  }
}
